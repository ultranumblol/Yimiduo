<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_order_noOrder2"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/nopic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:id="@+id/id_order_nopic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您还没有相关订单"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/id_order_nopic"
            android:layout_marginTop="20dp"
            android:id="@+id/id_order_notext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可以去逛逛有哪些需要安装的"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/id_order_notext"
            android:layout_marginTop="10dp"
            android:textSize="10sp"

            />


    </RelativeLayout>
</LinearLayout>